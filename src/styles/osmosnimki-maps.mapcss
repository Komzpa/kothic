/*
  Deja Vu MapCSS styles
  Osmosnimki maps style
*/

canvas {fill-color: #fcf8e4}

area[place=city]
       {fill-color:#f3eceb; z-index:2}

area[place=town],
area[place=hamlet],
area[place=village],
area[place=locality],
       {fill-color:#f4d7c7; z-index:2}
 

area[landuse=allotments],
area[leisure=garden],
area[landuse=orchard]
       {fill-color:#edf2c1; z-index:3}

area[natural=forest], area[natural=wood],
area[landuse=forest], area[landuse=wood]
       {fill-color: #d6f4c6; z-index:4}

area[landuse=grass], area[natural=grass] {fill-color: #f4ffe5; z-index:5}

area[landuse=farmland], area[landuse=farm], area[landuse=field]  {fill-color: #fcf8e4; z-index:5}

area[leisure=park] {fill-color: #c4e9a4; z-index:6}

area[landuse=industrial],area[landuse=military] {fill-color: #ddd8da; z-index:6}

area[landuse=garages] {fill-color: #ddd8da; z-index:7}

area[landuse=cemetery] {fill-color: #e5f5dc; z-index:8}

way|z-10[waterway=river]   {color: #C4D4F5; width: .6; z-index:9}
way|z-10[waterway=stream]  {color: #C4D4F5; width: .3; z-index:9}
way|z10-11[waterway=river] {color: #C4D4F5; width: .7; z-index:9}
way|z10-11[waterway=stream]{color: #C4D4F5; width: .5; z-index:9}
way|z10-11[waterway=canal] {color: #abc4f5; width: .6; z-index:9}

way[waterway=riverbank],
way[natural=water]
{fill-color: #C4D4F5; color: #C4D4F5; width:1; z-index:9;}

way[natural=water]{text:name; text-offset:1; font-size:9; /* font-family: DejaVu Serif Oblique;*/; text-color:#285fd1; text-allow-overlap: false }



way|z-11[highway=road],
way|z-11[highway=track]
        {text: name; text-position: line; width:0.2; opacity: 0.5; color: #996703; z-index:10}

way|z-10[highway=secondary],
way|z-10[highway=secondary_link]
        {text: name; text-position: line;
        width:1.2;  color: #fcffd1;
        casing-width:0.35; casing-color: #996703;
        z-index:11}

way|z11[highway=secondary],
way|z11[highway=secondary_link]
{text: name; text-position: line; text-color: #404040; font-family: DejaVu Sans Bold; font-size:9;
        width:1.4;  color: #fcffd1;
        casing-width:0.35; casing-color: #996703;
        z-index:11}
        
way|z-10[highway=primary],
way|z-10[highway=primary_link]
        {text: name; text-position: line;
        width:3;  color: #fcea97;
        casing-width:.5; casing-color: #996703;
        z-index:12}
way|z11[highway=primary],
way|z11[highway=primary_link]
        {text: name; text-position: line; text-color: #404040; font-family: DejaVu Sans Bold; font-size:9;
        width:4;  color: #fcea97;
        casing-width:.5; casing-color: #996703;
        z-index:12}


way|z-10[highway=trunk],
way|z-10[highway=trunk_link],
way|z-10[highway=motorway],
way|z-10[highway=motorway_link]
        {text: name; text-position: line;
        width:4;  color: #ffd780;
        casing-width:1; casing-color: #996703;
        z-index:13}

way|z11[highway=trunk],
way|z11[highway=trunk_link],
way|z11[highway=motorway],
way|z11[highway=motorway_link]
{text: name; text-position: line; text-color: #404040; font-family: DejaVu Sans Bold; font-size:9;
        width:5;  color: #ffd780;
        casing-width:1; casing-color: #996703;
        z-index:13}

way[highway=trunk]::centerline,
way[highway=trunk_link]::centerline,
way[highway=motorway]::centerline,
way[highway=motorway_link]::centerline
        {width:.3;  color: #fa6478; z-index:14}

way[railway=rail]
    {width:1.4; color: #606060;z-index:15}
way[railway=rail]::ticks
    {width:1; color: #ffffff; dashes: 6,6;z-index:15}




way[boundary=administrative][admin_level=2]
   {casing-width: 4; casing-opacity: 0.5; casing-color: #d4d4d4; casing-dashes:;
    width: 0.5; color: #202020; dashes: 6,4,1,4; opacity:0.7; z-index:16}

way[boundary=administrative][admin_level=4]
   {width: 0.7; color: #000000; dashes: 1,2; opacity:0.8; z-index:16}

way[boundary=administrative][admin_level=6]
   {width: 0.5; color: #101010; dashes: 1,2; opacity:0.6; z-index:16}

